{
    "name": "YouTube-Translator",
    "version": "1.0.0",
    "description": "Automatically translates a YouTube page.",
    "manifest_version": 3,
    "author": "",
    "action":{
        "default_popup": "src/chat.html",
        "default_title": "YouTube-Translator"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["scripts/content_script.js"]
        }
      ],
    "permissions": [
        "tabs",
        "activeTab",
        "contextMenus"
    ],
     "background": {
    "service_worker": "scripts/background.js"
  },
    "icons": {
        "128": "128-white-circle.png"
        
      }
      
      
      
}